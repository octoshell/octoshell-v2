  var class_name = form.getControlByPath("class_name").getValue();
  var group_id = form.getControlByPath("group_id").getValue();
  var obj_type_value = form.getControlByPath("obj_type").getValue();
  if(obj_type_value == 'y_obj_id'){
    var obj_id = null;
  }
  else{
