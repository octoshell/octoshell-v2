  $(function(){
    var len=filters.length;
    if (len>0) {
      $('#hidden_count').text("#{{t('.hidden_count_perf')}}"+len)
    }
    else {
      $('#hidden_count').text('#{{t(".no_perf_problems")}}')
    }
