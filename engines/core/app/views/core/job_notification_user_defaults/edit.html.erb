<div class="container mt-4">
  <div class="mb-4">
    <%= link_to users_job_notifications_path(@user), class: "btn btn-outline-secondary" do %>
      <i class="fa fa-arrow-left"></i> Назад к настройкам пользователя
    <% end %>
  </div>

  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2>Редактирование настроек уведомления "<%= @notification.name %>" для <%= @user.email %></h2>
      <%= link_to "Удалить настройки",
                job_notification_job_notification_user_default_path(@notification, @user_default),
                method: :delete,
                data: { confirm: "Вы уверены? Будут использованы глобальные настройки уведомлений по умолчанию." },
                class: "btn btn-danger" %>
    </div>
    <div class="card-body">
      <%= render 'form', user_default: @user_default, notification: @notification, user: @user %>
    </div>
  </div>
</div>
