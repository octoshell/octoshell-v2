<div class="container mt-4">
  <div class="mb-4">
    <%= link_to t('.back_to_notifications'), users_job_notifications_path, class: "btn btn-outline-secondary" %>
  </div>

  <div class="card">
    <div class="card-header">
      <h2><%= t('.notification_settings') %></h2>
    </div>
    <div class="card-body">
      <%= form_with(model: [@user_notification_settings], local: true) do |form| %>
        <% if @user_notification_settings.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= t('.error_count', count: @user_notification_settings.errors.count) %></h4>
            <ul>
              <% @user_notification_settings.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :notification_batch_interval, t('.batch_interval_label') %>
          <%= form.number_field :notification_batch_interval, class: "form-control", min: 1, max: 10080 %>
          <small class="form-text text-muted"><%= t('.batch_interval_hint') %></small>
        </div>

        <div class="form-group">
          <%= form.submit t('.save_settings'), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
