

     $(document).on('change','#q_who_type_in',function()
    {
     
      if ($(this).find('option:selected').length == 1)
      {
        
       	var temp= $(this).find('option:selected');
       	if(temp.val()=='User')
       	{
       		$('#who_type_aim').html("<%=j f.autocomplete_field :who_id_eq,label: t('user'), source:  main_app.users_path %>");
       	}
       	if(temp.val()=='Core::Project')
       	{
       		$('#who_type_aim').html("<%=j f.autocomplete_field :who_id_eq,label: t('project'), source:  core.projects_path %>");
       	}
       	if(temp.val()=='Group')
       	{
       		$('#who_type_aim').html("<%=j f.autocomplete_field :who_id_eq,label: t('Group'), source:  admin_get_groups_path %>");
       	}
       	

       	apply_select2();
       	//var temp= $(this).find('option:selected');
        
      }
      else
      {
      	$('#who_type_aim').empty();	
      }
    });

