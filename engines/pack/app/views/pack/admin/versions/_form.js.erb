bind_func_disable("#enable_id","#disable_id","#item_id");

function applySelectToVersionOptionValue(selectValue, id){
  var path = "/pack/admin/options_categories/" + id + "/values";
  selectValue.select2('destroy');
  selectValue.html('');
  $.getJSON(path, function( data ) {
    selectValue.select2({data: data});
  });
}


$(document).on('select2:select','.attach-category', function (e) {
  var selectValue = $(this).parents('.option-container').find('.attach-value');
  applySelectToVersionOptionValue(selectValue,e.params.data.id);
});



