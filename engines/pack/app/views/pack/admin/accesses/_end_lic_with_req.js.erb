  bottomForm.alpaca('destroy');
  bottomForm.alpaca({
    "schema":{
      "type":"object",
      "properties":{
        "status":{
          "title": '<%= Pack::Access.human_attribute_name(:status) %>',
          "enum": <%=raw @options_for_select.to_json%>,
          "required": true,
        },
        "forever":{
          "type": "radio",
          "enum": ['true','false'],
          "required": true,
          "dependencies": ["status"]
        },
        "lock_version":{
        },
        "authenticity_token":{
        },
        "end_lic":{
          "title": '<%=raw Pack::Access.human_attribute_name("end_lic")%>',
