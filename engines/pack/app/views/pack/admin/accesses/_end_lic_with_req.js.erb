          "dependencies": ["forever", "status"]
        },
        "delete_request":{
          "default": true,
          "dependencies": ["status"]
        },

      }
    },
    "options":{
      "focus":"",
      "hideInitValidationError":true,
      "fields":{
        "forever":{
          "optionLabels": labels,
          "sort": false,
          "dependencies":{
            "status": ["allowed", "expired","deleted","denied"]
          }
        },
        "end_lic":{
          "dependencies":{
            "status": ["allowed", "expired","deleted","denied"],
            "forever": false
          }
        },
        "delete_request":{
          "type": "checkbox",
          "rightLabel": '<%= t ".delete_request" %>',
          "dependencies":{
            "status": ["allowed", "expired"]
          }
        },
        "status":{
          "type": "select",
          "optionLabels": <%=raw @options_for_select_labels.to_json%>,
          "validate": false
        },
        "lock_version":{
          "type": "hidden"
        },
        "authenticity_token":{
          "type": "hidden"
        }
      },
      "form": {
            "attributes": {
                "method": "post",
                "action": "/pack/admin/accesses/<%=@access.id%>/manage_access"
            },
            "buttons": {
                "submit": {
                    "title": '<%= t("buttons.save") %>',
                    "click": function(){
                      this.validate(true);
                      this.refreshValidationState(true);
                      var control = bottomForm.alpaca('get');
                      if (control.getControlByPath('forever').getValue() == 'true')
                      {
                        control.getControlByPath('end_lic').setValue('');
                      }
                      control.getControlByPath('authenticity_token').setValue('<%=form_authenticity_token%>');
                      this.submit();
                    }
                  }
                },

      }
    },
