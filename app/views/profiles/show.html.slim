div class="page-header"
  h1 = t(".title", default: "Profile")

= render "form", profile: @profile

= render "core/employments/list", employments: @profile.user.employments.where(state: :active).order( primary: :desc, created_at: :desc )
= render "core/credentials/list", credentials: @profile.user.credentials.where(state: :active)
= render "core/bot_links/list", bot_links: @profile.user.bot_links.where(active: true)

= link_to t(".change_password"), edit_user_path(@profile.user)
br
= link_to t(".job_notifications_settings"), "core/users_job_notifications"
br
= link_to t(".job_notifications_events"), "core/user_events"
